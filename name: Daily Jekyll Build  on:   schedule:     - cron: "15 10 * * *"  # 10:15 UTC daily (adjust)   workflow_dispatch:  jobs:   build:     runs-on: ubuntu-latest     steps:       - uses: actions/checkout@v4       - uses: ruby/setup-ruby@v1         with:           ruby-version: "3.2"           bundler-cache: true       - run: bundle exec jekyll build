name: Daily Jekyll Build

on:
  schedule:
    - cron: "15 10 * * *"  # 10:15 UTC daily (adjust)
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: ruby/setup-ruby@v1
        with:
          ruby-version: "3.2"
          bundler-cache: true
      - run: bundle exec jekyll build